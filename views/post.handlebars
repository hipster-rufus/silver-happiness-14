<div class="text-center">
  <div class="card1">
    <h2 class="card-title">{{title}}</h2>    
    <p class="card-text">Created by {{user.username}} on {{format_date date_created}}</p>
    <hr >
    <p class="card-text">{{text}}</p>
  </div>
  <div>
    <form id="new-comment-form" class="form new-comment-form">
      <div>
        <input type="hidden" id="postId" value="{{id}}">
      </div>
      <div class="form-group">
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="submit-btn">Comment</button>
      </div>
    </form>

    {{#if comments.length}}
      {{#each comments as |comment|}}
      <div class="card2">
        <div class="card-body">
          <h5>Commented by {{comment.user.username}} on {{format_date date_created}}</h5>
          <p>{{comment.text}}</p>
        </div> 
      </div>
      {{/each}}
    {{/if}}
  </div>
</div>

<script src="/js/post.js"></script>
