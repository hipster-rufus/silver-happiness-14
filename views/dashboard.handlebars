<div class="row text-center">
  <div class="col-auto">
    <h2>Welcome to your dashboard, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-text">Text</label>
        <textarea class="form-input" id="post-text" name="post-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="submit-btn">Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>My Posts:</h3>
    <div class="container post-ctnr text-center">
    {{#each posts as |post|}}  
      <div class="card2">
        <div class="card-body">
          <div class="row">
            <h4><a class="body-link card-item" href="/post/{{post.id}}">{{post.title}}</a></h4>
            <button class="btn btn-sm btn-danger card-item" data-id="{{post.id}}">DELETE</button>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
