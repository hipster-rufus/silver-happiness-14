{{#each posts as |post| }}
<div class="card1 text-center mb-4 post">
  <div class="card-body">
    <h2 class="card-title">
      <a class="body-link" href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <hr >
  <div class="card-text">
    <p>
      {{post.text}}
    </p>
  </div>
</div>
{{/each}}
